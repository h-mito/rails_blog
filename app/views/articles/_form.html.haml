= form_with(model: @article, local: true) do |form|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
      %ul
        - @article.errors.full_messages.each do |msg|
          %li #{msg}

  %p
    = form.label :title
    = form.text_field :title
  %p
    = form.label :text
    = form.text_area :text
  %p
    = form.submit
