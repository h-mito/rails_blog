%h1 Listing articles

= link_to "新規作成", new_article_path

%table
  %tr
    %th Title
    %th Text
    %th{colspan: "3"}
  - @articles.each do |article|
    %tr
      %td #{article.title}
      %td #{article.text}
      %td
        =link_to '表示', article_path(article)
      %td
        =link_to '編集', edit_article_path(article)
      %td
        =link_to '削除', article_path(article), method: :delete, data: {confirm: "本当に削除しますか?"}
